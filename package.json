{
  "name": "mcp-apps-chart",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "bin": "dist/main.js",
  "scripts": {
    "build": "tsc --noEmit && tsc -p tsconfig.server.json && node scripts/ensure-shebang.mjs && cross-env INPUT=mcp-app.html vite build",
    "prepare": "npm run build",
    "start": "concurrently \"cross-env NODE_ENV=development INPUT=mcp-app.html vite build --watch\" \"tsx watch main.ts\""
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.1.1",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-singlefile": "^2.0.1"
  }
}
